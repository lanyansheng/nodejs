<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<title>注册</title>
	<link rel="stylesheet" type="text/css" href="/stylesheets/bootstrap.min.css"/>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="/javascripts/jquery-1.11.0.js" type="text/javascript" charset="utf-8"></script>
</head>
<body>
	<%- include('head.ejs') %>
	<p>请注册</p>
	<div class="form-horizontal ">
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-4 control-label">账号</label>
    <div class="col-sm-4">
      <input type="text" class="form-control" id="inputEmail3" placeholder="user">
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-4 control-label">密码</label>
    <div class="col-sm-4">
      <input type="text" class="form-control" id="inputPassword3" placeholder="Password">
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-4 control-label">身份</label>
    <div class="dropdown col-sm-4 ">
        <select class="form-control ">
            <option value="1" selected="selected">老师</option>
            <option value="2">学生</option>
        </select>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-sm-offset-5 col-sm-10">
      <button type="button" class="btn btn-success register">注册</button>
    </div>
  </div>
</div>

<script type="text/javascript">
	
	$(".register").click(function(){
		var str=$("option:selected").val() ;
		$.ajax({
			type:"post",
			url:"/users/register",
			data:{user:$("#inputEmail3").val(),psw:$("#inputPassword3").val(),status:str},
			success:function(data) {
				if(data == '1'){
					alert("注册老师账号成功！")
					setTimeout(function(){
						location.href = '/'
					},1000)
				}else if(data == '2'){
					alert("注册学生账号成功！")
					setTimeout(function(){
						location.href = '/'
					},1000)
				}else if (data == '0'){
					alert("账号已存在！")
					setTimeout(function(){
						location.href = '/register'
					},1000)
				}else{
					alert("注册失败！请再次尝试")
					setTimeout(function(){
						location.href = '/register'
					},1000)
				}
			}
		});
	})
</script>
</body>
</html>